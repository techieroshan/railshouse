		<script>

			/* On BxSlider desktop Code */

			var windowsize = $(window).width();

			var containerSize = $('.container').width();

			var maxSlides = 5;

			var slideWidth = containerSize/3;

			if (windowsize >= 768)	{

				maxSlides = 4;

				slideWidth = containerSize/4;

			}else if(windowsize < 768  || windowsize > 480){

				maxSlides = 2;

				slideWidth = containerSize/2;

			}else if(windowsize <= 480){

				maxSlides = 1;

				slideWidth = containerSize;

			}

			var BXSlder = $('.bxslider').bxSlider({

				pager: true,

				nextText: '',

				prevText: '',

				minSlides: 1,

				maxSlides: maxSlides,

				slideWidth:slideWidth,

				moveSlides: 1

			});

		

			/* On BxSlider resize Code */

			$( window ).resize(function() {

				var windowsize = $(window).width();

				var containerSize = $('.container').width();

				var maxSlides = 5;

				var slideWidth = containerSize/5;

				if (windowsize >= 768)	{

					maxSlides = 4;

					slideWidth = containerSize/4;

				}else if(windowsize < 768  || windowsize > 480){

					maxSlides = 2;

					slideWidth = containerSize/2;

				}else if(windowsize <= 480){

					maxSlides = 1;

					slideWidth = containerSize;

				}

				var BXSlder = $('.bxslider').bxSlider({

					pager: true,

					nextText: '',

					prevText: '',

					minSlides: 1,

					maxSlides: maxSlides,

					slideWidth:slideWidth,

					moveSlides: 1

				});

			});

		</script>

